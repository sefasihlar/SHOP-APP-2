                            <li><a asp-controller="Shop" asp-action="AllList">Alışveriş</a></li>
                            <li><a asp-controller="Home" asp-action="Contact">İletişim</a></li>
                        </ul>
                    </nav>
                </div>

            </div>
        </div>
    </header>
    @if (TempData["message"] != null)
    {
        <partial name="_resultMessage" model="@(TempData.Get<ResultMessage>("Message"))" />
    }
    <div class="wrapper fadeInDown">
        <div id="formContent">

            <!-- Icon -->
            <div class="fadeIn first">
                <i class="bi bi-person"></i>
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                </svg>
                </i><br>
                <h3>Bilgileriniz</h3>
                <br />
            </div>

            <!-- Login Form -->
            <form id="loginplace" class="user" asp-controller="Account" asp-action="Login" method="post">
                <div class="row">
                    <div class="col-12">
                        <input type="text" asp-for="@Model.UserName" value="@Model.UserName" id="login" class="fadeIn second" placeholder=" Kullanıcı Adınız...">
                        <br />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                        <br />

                        <input type="password"  class="fadeIn third" asp-for="Password" value="@Model.Password" placeholder="Şifreniz...">
                        <br />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <br />
                    </div>

                </div>
                <button type="submit" class="site-btn fadeIn fourth ">Giriş Yap</button>
            </form>
            <div style="display: none;" id="forgotMail" class="row">
                <div class="col-12">
                    <h3 class="fadeIn one"><strong>Kurtarma E-Postanızı Giriniz</strong></h3>
                    <input type="text" id="login" class="fadeIn second" name="login" placeholder="E-Posta Adresiniz...">
                </div>
                <input id="sender" type="submit" class="fadeIn third" value="Gönder">

            </div>

            <!-- Remind Passowrd -->
            <div id="formFooter">
                <a style="margin:10px 30px 0px 15px" asp-controller="Account" asp-action="ForgotPassword">Şifrenimi Unuttun ?</a>
                <a style="margin:10px 30px 0px 15px" asp-controller="Account" asp-action="RegisterUser">Kayıt Ol</a>
            </div>

        </div>
    </div>
    <!-- Footer Section Begin -->
    <footer class="footer spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="footer__about">
                        <div class="footer__about__logo">
                            <a href="./index.html"><img width="125px" height="125px" src="img/logo.png" alt=""></a>
