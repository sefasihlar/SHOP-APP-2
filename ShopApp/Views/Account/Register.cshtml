    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <h2><a class="underlineHover" asp-controller="Account" asp-action="RegisterUser"> Kullanıcı </a></h2>
            <h2  id="seller" class="underlineHover"><a class="underlineHover" asp-controller="Account" asp-action="Register"> Bayi </a></h2>

            <!-- Icon -->
            <div class="fadeIn first">
                <i class="bi bi-cart">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                        <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                    </svg>
                </i><br>
                <h3>Bayi Kayıt</h3>
            </div>

            <!-- Register Form -->
             <form class="user" asp-controller="Account" asp-action="Register" method="post">
                <div class="row">
                    <div class="col-6 ">

                        <input type="text" id="login" class="fadeIn second" asp-for="@Model.FullName" placeholder="Ad-Soyad...">
                             <span asp-validation-for="FullName" class="text-danger"></span>
                        <input type="text" class="fadeIn third" asp-for="@Model.UserName" placeholder="Kullanıcı Adınız...">
                           <span asp-validation-for="UserName" class="text-danger"></span>
                        <input type="text" class="fadeIn third" asp-for="@Model.Phone" placeholder="Telefon Numaranız...">
                    </div>
                    <div class="col-6">
                        <input type="text" class="fadeIn third" asp-for="@Model.SellerNumber" placeholder="Bayi Numarası...">
                        <input type="text" class="fadeIn third" asp-for="Email" placeholder="E-Posta Adresiniz...">
                             <span asp-validation-for="Email" class="text-danger"></span>
                        <input type="text" id="password" class="fadeIn third" asp-for="@Model.Password" placeholder="Şifreniz...">
                               <span asp-validation-for="Password" class="text-danger"></span>
                        <input type="text" id="password" class="fadeIn third" asp-for="@Model.RePassword"placeholder="Şifre Tekrar...">
                               <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <input type="submit" class="fadeIn fourth" value="Kayıt Ol">
            </form>
        </div>
