@model ShopApp.WebUI.Models.CartModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Ürünler</th>
                                <th>Ürün</th>
                                <th>Fiyat</th>
                                <th>Miktar</th>
                                <th>Toplam</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CartItems)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="img/cart/cart-1.jpg" alt="">
                                        <h5>@item.Name</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        @item.Price ₺
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                <input type="text" value="1">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="shoping__cart__total">
                                        @Model.TotalPrice()<span> ₺</span>
                                    </td>
                                    <td class="shoping__cart__item__close">
                                        <span class="icon_close"></span>
                                    </td>
                                </tr>
                            }
                      
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a asp-controller="Shop" asp-action="AllList" class="primary-btn cart-btn">Alışverişe Devam Et</a>
                    <a asp-controller="Cart" asp-action="Checkout" class="primary-btn cart-btn cart-btn-right">
                        <span class="icon_loading"></span>
                        Alışverişi Tamamla
                    </a>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="shoping__checkout">
                    <h5>Alışveriş Toplam</h5>
                    <ul>
                        <li>Ara Toplam <span>  @Model.TotalPrice()<span> ₺</span></span></li>
                        <li>Toplam <span>  @Model.TotalPrice()<span> ₺</span></span></li>
                    </ul>
                    <a asp-controller="Cart" asp-action="Checkout" class="primary-btn">Ödeme Ekranı</a>
                </div>
            </div>
        </div>
    </div>
</section>

