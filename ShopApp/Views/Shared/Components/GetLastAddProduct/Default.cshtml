@model ShopApp.WebUI.Models.ProductModel
<section class="latest-product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="latest-product__text">
                    <h4>Son Eklenenler</h4>
                    <div class="latest-product__slider owl-carousel">
                        <div class="latest-prdouct__slider__item">
                            @foreach (var item in Model.Products.Skip(3).Take(3))
                            {
                                <a href="#" class="latest-product__item">
                                    <div class="latest-product__item__pic">
                                        <img src="/Theme/img/product/@item.ImageUrl" alt="">
                                    </div>
                                    <div class="latest-product__item__text">
                                        <h6>@item.Name</h6>
                                        <span>@item.Price ₺</span>
                                    </div>
                                </a>
                            }
                        </div>
                        <div class="latest-prdouct__slider__item">
                            @foreach (var item in Model.Products.Take(3))
                            {
                                <a href="#" class="latest-product__item">
                                    <div class="latest-product__item__pic">
                                        <img src="/Theme/img/product/@item.ImageUrl" alt="">
                                    </div>
                                    <div class="latest-product__item__text">
                                        <h6>@item.Name</h6>
                                        <span>@item.Price</span>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
            @await Component.InvokeAsync("GetPopularTrendProduct")
        </div>
    </div>
</section>