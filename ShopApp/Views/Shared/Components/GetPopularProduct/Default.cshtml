@model ShopApp.WebUI.Models.ProductModel
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Gözde ürünlerimiz</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model.Products)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="/Theme/img/product/@item.ImageUrl">
                            <ul class="featured__item__pic__hover">
                                <li><a asp-controller="Shop" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="#">@item.Name</a></h6>
                            <h5>@item.Price ₺</h5>
                        </div>
                    </div>
                </div>

            }
           
        </div>
    </div>
</section>