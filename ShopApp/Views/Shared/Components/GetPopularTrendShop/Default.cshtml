@model ShopApp.WebUI.Models.ProductModel
<div class="row">
    <div class="product__discount__slider owl-carousel">
        @foreach (var item in Model.Products)
        {
            <div class="col-lg-4">
                <div class="product__discount__item">
                    <a asp-controller="Shop" asp-action="Details" asp-route-id="@item.Id">
                        <div class="product__discount__item__pic set-bg" data-setbg="/Theme/img/product/@item.ImageUrl">
                        </div>
                    </a>
                    <div class="product__discount__item__text">
                        <span>@item.Name</span>
                        <h5><a asp-controller="Shop" asp-action="Details" asp-route-id="@item.Id">@item.Name</a></h5>
                        <div class="product__item__price">@item.Price ₺</div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>