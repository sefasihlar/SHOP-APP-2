@model ShopApp.WebUI.Models.ProductModel
<div class="row">
    @foreach (var item in Model.Products)
    {
        <div class="col-lg-4 col-md-6 col-sm-6">
            <div class="product__item">
                <div class="product__item__pic set-bg" data-setbg="/Theme/img/product/@item.ImageUrl">
                    <ul class="product__item__pic__hover">
                        <li><a asp-controller="Shop" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i></a></li>
                    </ul>
                </div>
                <div class="product__item__text">
                    <h6><a href="#">@item.Name</a></h6>
                    <h5>@item.Price ₺</h5>
                </div>
            </div>
        </div>
    }

</div>