@model ShopApp.WebUI.Models.ResultMessage

<script>
    Swal.fire({
        title: '@Model.Title',
        html: '@Model.Message',
        icon: '@Model.Css', // istediğiniz stil ikonunu burada belirleyebilirsiniz
    });
</script>

<script>
    function myFunction(event, itemId) {
        event.preventDefault(); // Formun varsayılan gönderme işlemini engeller.
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu öğeyi silmek istediğinizden emin misiniz?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, sil!',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                const form = document.getElementById(`myForm_${itemId}`);
                form.submit();
            }
        });
    }
</script>

